{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "lib": ["ES2022"],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@opencode-ai/plugin": ["./node_modules/@opencode-ai/plugin"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "_deprecated", "skills/Telos/DashboardTemplate/**", "skills/WebAssessment/BugBountyTool/**"]
}
