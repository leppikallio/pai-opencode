{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PAI VoiceServer voices.json",
  "type": "object",
  "required": ["default_rate", "default_volume", "voices"],
  "properties": {
    "$schema": { "type": "string" },
    "default_rate": { "type": "number" },
    "default_volume": { "type": "number" },
    "voices": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": { "$ref": "#/definitions/voice" }
    }
  },
  "definitions": {
    "voice": {
      "type": "object",
      "required": ["voice_id"],
      "properties": {
        "voice_id": { "type": "string", "minLength": 1 },
        "voice_name": { "type": "string" },
        "rate_multiplier": { "type": "number" },
        "rate_wpm": { "type": "number" },
        "stability": { "type": "number" },
        "similarity_boost": { "type": "number" },
        "style": { "type": "number" },
        "speed": { "type": "number" },
        "use_speaker_boost": { "type": "boolean" },
        "description": { "type": "string" },
        "type": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
